@using Renterator.Web
@{
    const string AppName = "5 Minute Mobile";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@section styles {
    @Styles.Render("~/bundles/css/fmm-marketing")
    @RenderSection("styles", required: false)
}
@section scripts {
    @RenderSection("scripts", required: false)
}
<header class="navbar navbar-inverse navbar-static-top">
    <div class="navbar-inner">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>
        <a class="brand" href="@Url.Action(MVC.Home.Index())">@AppName</a>
        <div class="nav-collapse collapse">
            @Html.Partial("~/Views/Shared/LoginForm.cshtml")
            <ul class="nav">
                @*TODO: Auto-generate navigation links?*@
                <li class="active"><a href="@Url.Action(MVC.Home.Index())">Home</a></li>
            </ul>
        </div>
    </div>
</header>
<section class="row">
    <div class="span12">
        @RenderBody()
    </div>
</section>