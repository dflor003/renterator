@using Newtonsoft.Json
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@(ViewBag.Title != null ? "5MinuteMobile - " + ViewBag.Title : "5MinuteMobile")</title>
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />
    @Styles.Render("~/bundles/css/lib")
    @RenderSection("styles", required: false)
    @{
        string appPath = HttpContext.Current.Request.ApplicationPath;
        var globalVars = new
        {
            RootPath = appPath == "/" ? string.Empty : appPath
        };
    }
    @Scripts.Render("~/bundles/scripts/lib")
    <script type="text/javascript">
        window.GlobalVars = @(Html.Raw(JsonConvert.SerializeObject(globalVars)));
        infuser.defaults.templateUrl = GlobalVars.RootPath + "/Scripts/templates/";
        infuser.defaults.templateSuffix = ".tmpl.html";
    </script>
</head>
<body class="container with-footer">
    @RenderBody()
    <footer class="footer span12 text-center">
        <small class="muted">&copy; @DateTime.Now.Year 20Development. All rights reserved. </small>
    </footer>
    @Scripts.Render("~/bundles/scripts/fmm")
    @RenderSection("scripts", required: false)
</body>
</html>
