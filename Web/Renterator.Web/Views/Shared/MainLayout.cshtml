@using Renterator.Services.Dto
@{
    Layout = MVC.Shared.Views.BaseLayout;
    UserContext currentUser = Context.User as UserContext;
}
@section scripts {
    @RenderSection("scripts", required: false)
}
@section styles {
    @RenderSection("styles", required: false)
}

<header class="navbar-fixed-top">
    <nav class="navbar navbar-default navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action(MVC.Home.Index())">Renterator</a>
            </div>

            <div class="collapse navbar-collapse">
                <ul id="nav-links" class="nav navbar-nav">
                    <li class="active">
                        <a href="@Url.Action(MVC.Balances.Current())">My Account</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (currentUser != null)
                    {
                        <li>
                            <p class="navbar-text">
                                Welcome, @currentUser.FirstName @currentUser.LastName!
                            </p>
                        </li>
                        <li>
                            <a href="@Url.Action(MVC.Home.SignOut())">Sign Out</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<section class="container" role="main">
    @RenderBody()
</section>
<footer class="text-center" role="contentinfo">
    <small class="text-muted">&copy; @DateTime.Now.Year DanilF. All rights reserved. </small>
</footer>
